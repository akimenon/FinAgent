#!/bin/bash
# Pre-commit hook - runs tests before allowing commit
# Install: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if any Python or JavaScript/TypeScript files are staged
CODE_FILES=$(echo "$STAGED_FILES" | grep -E '\.(py|js|jsx|ts|tsx)$' || true)

if [ -z "$CODE_FILES" ]; then
    echo "ğŸ“ No code changes detected (only docs/scripts/config)"
    echo "âœ… Skipping tests - pre-commit passed!"
    exit 0
fi

echo "ğŸ“¦ Code changes detected:"
echo "$CODE_FILES" | sed 's/^/   /'

# Navigate to backend
cd "$(dirname "$0")/../backend" 2>/dev/null || cd backend

# Activate virtual environment if it exists
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
fi

# Run tests
echo "ğŸ§ª Running backend tests..."
python -m pytest tests/ -q --tb=line

if [ $? -eq 0 ]; then
    echo "âœ… All tests passed!"
else
    echo "âŒ Tests failed. Commit aborted."
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
